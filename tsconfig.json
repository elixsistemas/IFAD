{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
  
    // Pastas
    "rootDir": "./src",
    "outDir": "./dist",

    // Qualidade / DX
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": false,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "sourceMap": true,

    // Tipos (mantenha só os necessários)
    "types": ["node"],

    // Úteis para seu projeto
    "resolveJsonModule": true,        
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,

    // Build melhorzinho (opcional)
    "declaration": false,           
    "declarationMap": false,
    "incremental": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
